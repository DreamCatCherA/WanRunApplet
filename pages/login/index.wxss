.login {
    width: 100%;
    padding: 60rpx;
    box-sizing: border-box;
    /* background-color: #000; */
}

.loginbox {
    width: 100%;
    /* background-color: #f00; */
}

.loginPic {
    width: 100%;
    text-align: center;
    padding-top: 100rpx;
    padding-bottom: 60rpx;
    box-sizing: border-box;
}

.loginPic>image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.loginText {
    width: 100%;
    margin-bottom: 100rpx;
}

.loginTextItem {
    position: relative;
}

.loginUserName {
    width: 100%;
}

.loginTextItem>input {
    width: 100%;
    height: 100rpx;
    margin-bottom: 20rpx;
    /* background-color: #f0f; */
    padding-left: 80rpx;
    box-sizing: border-box;
    border: 1px solid #eee;
}

.iconLogin {
    top: 25rpx!important;
    left: 15rpx;
}

.operationBox {
    width: 100%;
}

.operationBox>input {
    width: 100%;
    height: 100rpx;
    margin-bottom: 20rpx;
    line-height: 100rpx;
    text-align: center;
    border: 1px solid #eee;
    border-radius: 5px;
}