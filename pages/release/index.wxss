.release {
    position: relative;
}

.backBox {
    position: fixed;
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
}

.backBox>text {
    font-size: 30rpx;
}

.releaseBanner {
    margin-top: 40rpx;
    width: 100%;
    height: 450rpx;
    padding: 40rpx;
    box-sizing: border-box;
}

.releaseBannerBox {
    width: 100%;
    height: 100%;
    border: 1px solid #000;
}

.releaseItemBox {
    width: 750rpx;
    height: 500rpx;
    padding-top: 40rpx;
    box-sizing: border-box;
    /* background-color: #eee; */
}

.releaseItem {
    width: 600rpx;
    height: 180rpx;
    margin: 0 auto;
    /* border: 1px solid #000; */
}

.releaseItem:first-child {
    margin-bottom: 40rpx;
}

.releaseBtn {
    width: 280rpx;
    height: 180rpx;
    background-color: #000;
    display: inline-block;
    color: #fff;
    text-align: center;
    line-height: 180rpx;
}

.releaseBtn:first-child {
    margin-right: 40rpx;
}